generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  userId    String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  rooms     Room[]   @relation("UserRooms") // Many-to-many
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  roomId    String   @id @default(uuid())
  name      String   @unique
  users     User[]   @relation("UserRooms") // Many-to-many
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
